<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chapman.hawaiiclub"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="17" />

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="false"
        android:smallScreens="false"
        android:xlargeScreens="true" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/hi_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.chapman.hawaiiclub.HomePage"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.chapman.hawaiiclub.MembersList"
            android:label="@string/members"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.chapman.hawaiiclub.EventsList"
            android:label="@string/events"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.chapman.hawaiiclub.AddMember"
            android:label="@string/add_member"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.chapman.hawaiiclub.AddEvent"
            android:label="@string/add_event"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.chapman.hawaiiclub.ViewMember"
            android:label="@string/member_info"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.chapman.hawaiiclub.ViewEvent"
            android:label="@string/event_info"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.chapman.hawaiiclub.SendReminder"
            android:label="@string/reminder"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.chapman.hawaiiclub.UpdateEvent"
            android:label="@string/update_event"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.chapman.hawaiiclub.UpdateMember"
            android:label="@string/update_member"
            android:screenOrientation="portrait" />
    </application>

</manifest>
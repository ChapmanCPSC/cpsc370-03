<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <TextView
            android:id="@+id/vNumber"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/vName"
            android:layout_below="@+id/eName"
            android:layout_marginTop="14dp"
            android:text="@string/number"/>

        <EditText
            android:id="@+id/eNumber"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/vNumber"
            android:layout_below="@+id/vNumber"
            android:ems="10"
            android:inputType="phone" />

        <EditText
            android:id="@+id/eName"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/vName"
            android:layout_below="@+id/vName"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/vEmail"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/eNumber"
            android:layout_below="@+id/eNumber"
            android:layout_marginTop="16dp"
            android:text="@string/email" />

        <EditText
            android:id="@+id/eEmail"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/vEmail"
            android:layout_below="@+id/vEmail"
            android:ems="10"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/vID"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/eEmail"
            android:layout_below="@+id/eEmail"
            android:layout_marginTop="14dp"
            android:text="@string/ID" />

        <EditText
            android:id="@+id/eMajor"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/eId"
            android:layout_below="@+id/vMajor"
            android:ems="10" />

        <Button
            android:id="@+id/submitMember"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/eMajor"
            android:layout_below="@+id/eMajor"
            android:text="@string/submit" />

        

        <TextView
            android:id="@+id/vName"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="20dp"
            android:text="@string/name" />

        <TextView
            android:id="@+id/vMajor"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/vName"
            android:layout_below="@+id/eId"
            android:text="@string/major" />

        <EditText
            android:id="@+id/eId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/vMajor"
            android:layout_below="@+id/vID"
            android:ems="10"
            android:inputType="number"
            android:textSize="30sp" />

    </RelativeLayout>



<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        style="@style/ApplicaLogoFrameLayout"
        android:id="@+id/applicaLogoElements">

        <com.mikepenz.iconics.view.IconicsImageView
            style="@style/ApplicaLogoImageView"
            android:id="@+id/applicaLogo"/>

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Reset Your Password"
        android:id="@+id/resetYourPassword"
        android:textColor="@android:color/black"
        android:layout_below="@+id/applicaLogoElements"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Please enter your email below"
        android:id="@+id/pleaseEnterYourEmailBelow"
        android:textColor="@android:color/darker_gray"
        android:layout_below="@+id/resetYourPassword"
        android:layout_marginLeft="20dp" />

    <FrameLayout
        style="@style/IconWithEditTextFrameLayout"
        android:layout_below="@id/pleaseEnterYourEmailBelow">

        <com.mikepenz.iconics.view.IconicsImageView
            style="@style/IconWithEditText"
            android:id="@+id/resetEmailIcon"/>

        <EditText
            android:id="@+id/homeEmailInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="16"
            android:inputType="textEmailAddress"
            android:paddingLeft="55dp"
            android:hint="Your Email"/>

    </FrameLayout>

</RelativeLayout><!-- From: file:/Users/Xavi/Desktop/workspace2016/applicaandroid/res/layout/activity_forgot_password.xml -->
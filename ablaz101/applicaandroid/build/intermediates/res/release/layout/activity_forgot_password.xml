<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.mikepenz.iconics.view.IconicsImageView
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:id="@+id/applicaLogo"
        android:background="@color/applica_blue"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Reset Your Password"
        android:id="@+id/resetYourPassword"
        android:textColor="@android:color/black"
        android:layout_below="@+id/applicaLogo"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Please enter your email below"
        android:id="@+id/pleaseEnterYourEmailBelow"
        android:textColor="@android:color/darker_gray"
        android:layout_below="@+id/resetYourPassword"
        android:layout_alignStart="@+id/resetYourPassword" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pleaseEnterYourEmailBelow"
        android:layout_alignStart="@id/resetYourPassword"
        android:layout_marginTop="10dp">

        <com.mikepenz.iconics.view.IconicsImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:id="@+id/resetEmailIcon"
            android:layout_below="@+id/pleaseEnterYourEmailBelow"
            android:background="@color/applica_blue"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="18dp"/>

        <!-- 10 spaces -->
        <EditText
            android:id="@+id/homeEmailInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="14"
            android:inputType="textEmailAddress"
            android:hint="          Your Email"/>

    </FrameLayout>

</RelativeLayout><!-- From: file:/Users/Xavi/Desktop/workspace2016/applicaandroid/res/layout/activity_forgot_password.xml -->
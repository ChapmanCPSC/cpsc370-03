<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Reset your password"
        android:textColor="@android:color/black"
        android:layout_marginTop="42dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/resetYourPasswordText"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/resetYourPasswordText"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="40dp"
        android:id="@+id/oldPasswordElements">

        <com.mikepenz.iconics.view.IconicsImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:id="@+id/unlockIcon"
            android:background="@color/applica_blue"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="18dp"/>

        <!-- 4 spaces -->
        <EditText
            android:id="@+id/oldPasswordInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="14"
            android:inputType="textPassword"
            android:hint="    Old Password"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/oldPasswordElements"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="40dp"
        android:id="@+id/newPasswordElements">

        <com.mikepenz.iconics.view.IconicsImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:id="@+id/lockIcon"
            android:background="@color/applica_blue"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="18dp"/>

        <!-- 4 spaces -->
        <EditText
            android:id="@+id/newPasswordInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="14"
            android:inputType="textPassword"
            android:hint="    New Password" />

    </FrameLayout>

</RelativeLayout><!-- From: file:/Users/Xavi/Desktop/workspace2016/applicaandroid/res/layout/activity_changepassword.xml -->
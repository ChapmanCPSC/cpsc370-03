<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <include layout="@layout/widget_top_bar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/topBar"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Search for Courses"
        android:id="@+id/courseSearchBar"
        android:textColor="@android:color/black"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/topBar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ACADEMIC COURSE CATALOG"
        android:id="@+id/academicCourseCatalogText"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Undergraduate Programs"
        android:id="@+id/undergraduateProgramsTitle"
        android:layout_marginTop="20dp"
        android:textColor="@color/applica_gray_text"
        android:layout_marginLeft="10dp"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/programListView"
        android:layout_below="@id/undergraduateProgramsTitle"/>

</LinearLayout><!-- From: file:/Users/Xavi/Desktop/workspace2016/applicaandroid/res/layout/activity_courses_offered.xml -->
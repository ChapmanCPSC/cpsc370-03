<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_food_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/card_food_save"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_plus"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/card_food_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/card_food_save"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@android:color/black"/>

            <View
                android:id="@+id/card_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/card_food_title"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="13dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/divider" />

            <TextView
                android:id="@+id/card_food_calories"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_divider"
                android:layout_marginTop="5dp"
                android:layout_marginStart="17dp"
                android:textSize="12sp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/card_food_fat"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_food_calories"
                android:layout_marginTop="5dp"
                android:layout_marginStart="17dp"
                android:textSize="12sp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/card_food_carbs"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_food_fat"
                android:layout_marginTop="5dp"
                android:layout_marginStart="17dp"
                android:textSize="12sp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/card_food_protein"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_food_carbs"
                android:layout_marginTop="5dp"
                android:layout_marginStart="17dp"
                android:layout_marginBottom="16dp"
                android:textSize="12sp"
                android:textColor="@android:color/black"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/totals_fragment_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fitsSystemWindows="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/totals_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Food Consumed Today"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_margin="10dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/totals_names"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/totals_title"
                android:layout_margin="10dp"
                android:textColor="@android:color/black"/>

            <View
                android:id="@+id/totals_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/totals_names"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/divider" />

            <TextView
                android:id="@+id/totals_nutrition_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Nutrition Data"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_margin="10dp"
                android:layout_below="@id/totals_divider"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/totals_calories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/totals_nutrition_title"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/totals_fat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/totals_calories"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/totals_carbs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/totals_fat"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/totals_fiber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/totals_carbs"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="10dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/totals_sugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/totals_fiber"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="10dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/totals_protein"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/totals_sugar"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/totals_sodium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/totals_protein"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/totals_cholesterol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/totals_sodium"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"
                android:textColor="@android:color/black"/>

        </RelativeLayout>

    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/totals_fragment_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:clickable="true"
        android:src="@drawable/ic_clear"
        android:backgroundTint="@color/material_accent"
        app:borderWidth="0dp"
        app:elevation="4dp"
        app:layout_anchor="@id/totals_fragment_content"
        app:layout_anchorGravity="bottom|right|end" />

</android.support.design.widget.CoordinatorLayout>

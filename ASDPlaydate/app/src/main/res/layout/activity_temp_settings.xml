<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="edu.chapman.cpsc370.asdplaydate.activities.TempSettingsActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit My Profile"
            android:id="@+id/buttonEditProfile"/>

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            />

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Default Search Radius"
                android:id="@+id/textViewSearchRadius"/>

            <SeekBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/seekBarSearchRadius"
                android:layout_weight="0.81"
                android:indeterminate="false"/>

        </LinearLayout>

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            />

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            />

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Default Broadcast Duration"
                android:id="@+id/textView3"/>

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/seekBarBroadcastDuration"
                android:indeterminate="false"/>

        </LinearLayout>

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            />

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Default Broadcast Message"
                android:id="@+id/textViewBroadcastMessage"/>

        </LinearLayout>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextBroadcastMessage"
            android:text="Insert Broadcast Message Here"/>

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            />

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Prompt Before Broadcast"
                android:id="@+id/textViewPromptBeforeBroadcast"/>

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="On"
                android:id="@+id/switch1"
                android:checked="true"
                />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:id="@+id/buttonLogout"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>
</RelativeLayout>
